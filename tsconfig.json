{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "esnext",
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "WebWorker"
    ],
    "skipLibCheck": true,
    "esModuleInterop": false,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "noEmit": false,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/client"
  },
  
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}